    <script>
        function submitQuiz() {
            let score = 0;

            // Respostas corretas:
            const correctAnswers = {
                q1: 'c', // Aumento da energia e entusiasmo
                q2: 'b', // Tensão muscular ou dor no corpo
                q3: 'a', // Preocupações e medos intensos e excessivos
                q4: 'b', // Perda de um ente querido
                q5: 'a', // Dormir em excesso ou insônia
                q6: 'b', // Consumo excessivo de cafeína
                q7: 'a', // Sentimento de desmaio ou tontura
                q8: 'a', // Ter um histórico familiar de depressão
                q9: 'a', // Terapia psicológica e, em alguns casos, medicação
                q10: 'a' // A ansiedade normal não interfere nas atividades diárias, enquanto a patológica pode prejudicar a vida cotidiana.
            };

            // Verificar respostas:
            for (let i = 1; i <= 10; i++) {
                let selected = document.querySelector(`input[name="q${i}"]:checked`);
                if (selected && selected.value === correctAnswers[`q${i}`]) {
                    score++;
                }
            }

            // Exibir resultado:
            const result = document.getElementById('result');
            if (score === 10) {
                result.innerHTML = "Você acertou todas as respostas! Parabéns!";
            } else {
                result.innerHTML = `Você acertou ${score} de 10.`;
            }
        }
    </script>
